<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE struts PUBLIC 
	"-//Apache Software Foundation//DTD Struts Configuration 2.0//EN"
	"http://struts.apache.org/dtds/struts-2.0.dtd">

<struts>
	<package name="struts2" extends="struts-default">
		<!-- 拦截器 -->
		<interceptors>
			<interceptor name="pageInterceptor"
				class="com.cqtd.common.base.interceptor.PageInterceptor" />
			<interceptor-stack name="globalStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="pageInterceptor" />
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="globalStack" />

		<action name="loginAction_*" class="com.cqtd.system.action.LoginAction" method="{1}">
			<result>/page/main.jsp</result>
			<result name="input">index.jsp</result>
		</action>
	</package>

	<!-- Json基础包 -->
	<package name="json-all" extends="json-default">
		<!-- 拦截器 -->
		<interceptors>
			<interceptor name="pageInterceptor"
				class="com.cqtd.common.base.interceptor.PageInterceptor" />
			<interceptor-stack name="globalStack">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="pageInterceptor" />
			</interceptor-stack>
		</interceptors>
		<default-interceptor-ref name="globalStack" />
	</package>

	<!-- 导入模块配置文件 -->
	<include file="struts-example.xml"></include>
	<include file="struts-rebate.xml"></include>
	<include file="struts-dict.xml"></include>
	<include file="struts-sys-user.xml"></include>
	<include file="struts-privilege.xml"></include>
</struts>